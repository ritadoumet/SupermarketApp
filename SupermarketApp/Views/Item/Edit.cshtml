@model Item

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Item</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
            
        </div>
        <div class="mb-3">
            <label asp-for="Weight"></label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
    
        </div>
        <div class="mb-3">
            <label asp-for="Category"></label>
            <select name="category" id="category" asp-for="Category" class="form-control" >
                  <option value="meatfish" selected>Meat & Fish</option>
                  <option value="dairy">Dairy</option>
                  <option value="veggiesfruit">Veggies & Fruit</option>
                  <option value="bread">Bread</option>
                  <option value="care">Care Products</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
      
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update Item</button>
        <a asp-controller="Item" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form> 

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
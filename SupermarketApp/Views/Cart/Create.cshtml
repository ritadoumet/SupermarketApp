@model CartItem
@{
    ViewData["Title"] = "Cart";
}
@if (TempData["success"] != null)
{
    <p class="text-success">@TempData["success"]</p>
}

<form method="post">
    <input asp-for="item.Id" hidden/>
    <input asp-for="item.Category" hidden/>
    <input asp-for="item.Name" hidden/>
    <input asp-for="item.Price" hidden/>
    <input asp-for="item.Weight" hidden/>
    <input asp-for="Id" hidden/>
    <input asp-for="UserID" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add to Cart</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="item.Name"></label>
            <input asp-for="item.Name" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="item.Weight"></label>
            <input asp-for="item.Weight" class="form-control" disabled>
            
        </div>
        <div class="mb-3">
            <label asp-for="item.Price"></label>
            <input asp-for="item.Price" class="form-control" disabled/>
    
        </div>
        <div class="mb-3">
            <label asp-for="item.Category"></label>
            <select name="category" id="category" asp-for="item.Category" class="form-control" disabled>
                  <option value="meatfish" selected>Meat & Fish</option>
                  <option value="dairy">Dairy</option>
                  <option value="veggiesfruit">Veggies & Fruit</option>
                  <option value="bread">Bread</option>
                  <option value="care">Care Products</option>
            </select>
      
        </div>
        <div class="mb-3">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" type="number" min="1" max="20" step="1"/>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add to Cart</button>
        <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form> 

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
    }

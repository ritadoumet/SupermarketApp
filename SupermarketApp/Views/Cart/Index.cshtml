@model List<SupermarketApp.Models.CartItem>
@{
    ViewData["Title"] = "Cart";
}
@if (TempData["success"] != null)
{
    <p class="text-success">@TempData["success"]</p>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Items in your cart</h2>
        </div>
    </div>

</div>
@if (!Model.Any())
{
    <h3>Your cart is empty.</h3>
    <a casp-controller="Cart" asp-action="Item" class="btn btn-primary mx-2">Go to Items page</a>
}
else{


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Price</th>
            <th>Weight</th>
            <th>Category</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.item.Name
                </td>
                <td>@obj.item.Price</td>
                <td>@obj.item.Weight</td>
                <td>@obj.item.Category</td>
                <td>@obj.Quantity</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                      
                        <a casp-controller="Cart" asp-action="Edit" asp-route-itemid=@obj.Id class="btn btn-primary mx-2">Edit</a>
                        <a casp-controller="Cart" asp-action="Delete" asp-route-itemid=@obj.Id class="btn btn-danger mx-2">Remove</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
  <a casp-controller="Cart" asp-action="Order" class="btn btn-primary mx-2">Order</a>



                    }